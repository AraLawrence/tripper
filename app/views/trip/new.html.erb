<div class="row">
  <div class="col-trip-edit col s6">
    <span class="flow-text">
      <div id="map"></div>
      <div id="panel"></div>
    </span>
  </div>
	<div class="col-trip-edit col s6">
		<!-- <h1>Plan your Trip</h1> -->
    <div class="trip_box">
     	<div class="row">
        <h3><%= @trip.trip_name %></h3>
      </div>
      <h5>Start: <%= @trip.start_point %></h5>
      <% @destinations.each do |d| %>
      <h6><a href = "<%= d.url %>" target="_blank"><%= d.place %></a></h6>
        <% end %>
      <h5>End: <%= @trip.end_point %></h5>
      
    </div>
  </div>
</div>

<div class="hide">
  <div id="start"><%= @trip.start_point %></div>
  <div id="end"><%= @trip.end_point %></div>
</div>
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=<%= @gmap %>&callback=initMap">
</script>
